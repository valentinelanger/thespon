<div class="container">
    <h1>Workers List</h1>
    <div class="row">
        <div class="col-xs-12">
            <table class="main_table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Profession</th>
                        <th>Wage / month</th>
                        <th>Shifts number</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% @workers.each do |worker| %>
                        <tr>
                            <th><%= "#{worker.first_name} #{worker.last_name}" %></th>
                            <th><%= worker.status %></th>
                            <th>100</th>
                            <th>2</th>
                            <th>
                                <button class="btn btn-default"><%= link_to "edit", edit_worker_path(worker) %></button>
                            </th>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>






